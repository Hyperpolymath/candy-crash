<% content_for :title, "Admin Dashboard" %>

<div class="container py-4">
  <!-- Welcome Header -->
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-5 fw-bold">Admin Dashboard ⚙️</h1>
      <p class="lead text-muted">Platform overview and management</p>
    </div>
  </div>

  <!-- Platform Stats -->
  <div class="row g-4 mb-5">
    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 bg-primary bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @total_users %></h2>
          <p class="mb-0">Total Users</p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 bg-success bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-person-badge-fill" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @total_students %></h2>
          <p class="mb-0">Students</p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 bg-info bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-mortarboard-fill" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @total_instructors %></h2>
          <p class="mb-0">Instructors</p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card border-0 shadow-sm h-100 bg-warning bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-book-fill" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @total_courses %></h2>
          <p class="mb-0">Total Courses</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Popular Courses -->
    <div class="col-lg-6 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0 py-3">
          <h4 class="mb-0"><i class="bi bi-trophy-fill text-warning"></i> Most Popular Courses</h4>
        </div>
        <div class="card-body">
          <% if @popular_courses.any? %>
            <div class="list-group list-group-flush">
              <% @popular_courses.each_with_index do |course, index| %>
                <div class="list-group-item px-0 py-3">
                  <div class="d-flex align-items-start">
                    <div class="me-3">
                      <span class="badge bg-primary rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                        #<%= index + 1 %>
                      </span>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="mb-1">
                        <%= link_to course.title, course_path(course), class: "text-decoration-none" %>
                      </h6>
                      <p class="text-muted small mb-1">
                        <i class="bi bi-person"></i> <%= course.instructor.full_name %>
                      </p>
                      <div class="d-flex gap-3">
                        <span class="small">
                          <i class="bi bi-people-fill text-success"></i>
                          <%= course.enrollments.count %> enrollments
                        </span>
                        <span class="small">
                          <i class="bi bi-book text-primary"></i>
                          <%= course.lessons.count %> lessons
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="bi bi-trophy text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
              <p class="text-muted small mt-2">No courses yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-6">
      <div class="row g-4">
        <!-- Recent Users -->
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
              <h5 class="mb-0"><i class="bi bi-person-plus"></i> Recent Users</h5>
            </div>
            <div class="card-body">
              <% if @recent_users.any? %>
                <div class="list-group list-group-flush">
                  <% @recent_users.first(5).each do |user| %>
                    <div class="list-group-item px-0 py-2">
                      <div class="d-flex justify-content-between align-items-center">
                        <div>
                          <h6 class="mb-0 small">
                            <%= user.full_name %>
                            <span class="badge bg-<%= user.admin? ? 'danger' : user.instructor? ? 'info' : 'secondary' %> ms-2">
                              <%= user.role.capitalize %>
                            </span>
                          </h6>
                          <small class="text-muted"><%= user.email %></small>
                        </div>
                        <small class="text-muted">
                          <%= time_ago_in_words(user.created_at) %> ago
                        </small>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted small">No users yet</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Recent Enrollments -->
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
              <h5 class="mb-0"><i class="bi bi-bookmark-star"></i> Recent Enrollments</h5>
            </div>
            <div class="card-body">
              <% if @recent_enrollments.any? %>
                <div class="list-group list-group-flush">
                  <% @recent_enrollments.first(5).each do |enrollment| %>
                    <div class="list-group-item px-0 py-2">
                      <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                          <h6 class="mb-0 small"><%= enrollment.user.full_name %></h6>
                          <small class="text-muted"><%= enrollment.course.title %></small>
                        </div>
                        <small class="text-muted">
                          <%= time_ago_in_words(enrollment.enrolled_at) %> ago
                        </small>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted small">No enrollments yet</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Platform Metrics -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm bg-light">
        <div class="card-body">
          <h6 class="text-muted text-uppercase small mb-3">Platform Metrics</h6>
          <div class="row g-3">
            <div class="col-md-3">
              <div class="d-flex justify-content-between">
                <span class="small">Total Enrollments:</span>
                <strong class="text-success"><%= @total_enrollments %></strong>
              </div>
            </div>
            <div class="col-md-3">
              <div class="d-flex justify-content-between">
                <span class="small">Published Courses:</span>
                <strong class="text-primary"><%= Course.published.count %></strong>
              </div>
            </div>
            <div class="col-md-3">
              <div class="d-flex justify-content-between">
                <span class="small">Total Lessons:</span>
                <strong class="text-info"><%= Lesson.count %></strong>
              </div>
            </div>
            <div class="col-md-3">
              <div class="d-flex justify-content-between">
                <span class="small">Total Quizzes:</span>
                <strong class="text-warning"><%= Quiz.count %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
