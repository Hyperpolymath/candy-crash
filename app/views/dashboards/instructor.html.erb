<% content_for :title, "Instructor Dashboard" %>

<div class="container py-4">
  <!-- Welcome Header -->
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-5 fw-bold">Instructor Dashboard ğŸ‘¨â€ğŸ«</h1>
      <p class="lead text-muted">Manage your courses and track student progress</p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100 bg-primary bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-book-fill" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @total_courses %></h2>
          <p class="mb-0">Your Courses</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100 bg-success bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @total_students %></h2>
          <p class="mb-0">Total Students</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100 bg-info bg-gradient text-white">
        <div class="card-body text-center">
          <i class="bi bi-graph-up-arrow" style="font-size: 3rem; opacity: 0.8;"></i>
          <h2 class="mt-3 mb-0"><%= @recent_enrollments.count %></h2>
          <p class="mb-0">Recent Enrollments</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Your Courses -->
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 py-3">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-book"></i> Your Courses</h4>
            <%= link_to "Create Course", "#", class: "btn btn-sm btn-primary disabled",
                        title: "Coming soon" %>
          </div>
        </div>
        <div class="card-body">
          <% if @courses.any? %>
            <div class="list-group list-group-flush">
              <% @courses.each do |course| %>
                <div class="list-group-item px-0">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="flex-grow-1">
                      <h5 class="mb-1">
                        <%= link_to course.title, course_path(course), class: "text-decoration-none" %>
                      </h5>
                      <p class="text-muted small mb-2">
                        <span class="badge bg-primary"><%= course.category.name %></span>
                        <span class="ms-2"><i class="bi bi-clock"></i> <%= course.duration_hours %> hours</span>
                        <span class="ms-2"><i class="bi bi-people"></i> <%= course.enrollments.count %> students</span>
                      </p>
                    </div>
                    <span class="badge <%= course.published? ? 'bg-success' : 'bg-secondary' %>">
                      <%= course.published? ? 'Published' : 'Draft' %>
                    </span>
                  </div>

                  <div class="d-flex gap-2">
                    <%= link_to "View Course", course_path(course), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", "#", class: "btn btn-sm btn-outline-secondary disabled" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-book text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
              <p class="text-muted mt-3">You haven't created any courses yet.</p>
              <%= link_to "Create Your First Course", "#", class: "btn btn-primary disabled" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Enrollments -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="mb-0"><i class="bi bi-person-plus"></i> Recent Enrollments</h5>
        </div>
        <div class="card-body">
          <% if @recent_enrollments.any? %>
            <div class="list-group list-group-flush">
              <% @recent_enrollments.each do |enrollment| %>
                <div class="list-group-item px-0 py-2">
                  <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                      <h6 class="mb-0 small"><%= enrollment.user.full_name %></h6>
                      <small class="text-muted">
                        <%= enrollment.course.title %>
                      </small>
                    </div>
                    <small class="text-muted">
                      <%= time_ago_in_words(enrollment.enrolled_at) %> ago
                    </small>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="bi bi-person-plus text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
              <p class="text-muted small mt-2">No enrollments yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
